                  <VBox alignment="CENTER" prefHeight="204.0" prefWidth="300.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#onButtonClick" prefHeight="37.0" prefWidth="86.0" text="Let's play!" />
