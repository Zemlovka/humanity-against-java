            <VBox prefHeight="134.0" prefWidth="300.0">
               <children>
                  <Label id="logo" alignment="TOP_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="150.0" prefWidth="300.0" text="Humanity against java" wrapText="true">
